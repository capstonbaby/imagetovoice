@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <ul class="dropdown-menu dropdown-user" style="background:#f5f5dc">
        <li>
            <a href="#"><i class="fa fa-user"></i> @User.Identity.GetUserName()</a>
        </li>
        <li class="divider"></li>
        <li>
            <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out fa-fw"></i> Đăng xuất</a>
            @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()
            }
        </li>
    </ul>
}
else
{
    <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
}
