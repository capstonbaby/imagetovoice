                            swal({
                                text: data.message,
                                type: 'error',
                            }).then(function () {
                                location.href = "@Url.Action("editConcept", "Object", new { conceptId = this.Model.ConceptId })";
                            });
                        }
                    },
                    error: function (error) {
                        $('.loader').hide();
                        $('.dim-background').hide();
                        swal({
                            text: 'Đã có lỗi xảy ra!',
                            type: 'error',
                        });
                    }
                });
            })
        };
    </script>
}
