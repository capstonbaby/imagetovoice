@model List<PersonGroupCustomModel>

<div class="right_col" role="main">

    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>
                    Person Groups
                </h3>
            </div>
        </div>
        <div class="clearfix"></div>
        @foreach (var item in this.Model)
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>@item.personGroup.name | <small>@item.personGroup.userData </small></h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                                <li><a class="close-link"><i class="fa fa-close"></i></a></li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <table id="" class="table table-striped table-bordered display">
                                <thead>
                                    <tr>
                                        <th>No.</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int j = 1;}
                                    @foreach (var person in item.personList)
                                    {
                                        <tr>
                                            <td>@j</td>
                                            <td>@person.name</td>
                                            <td>@person.userData</td>
                                            <td></td>
                                        </tr>
                                        j++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
                                        }

    </div>
</div>
<script>
    $(document).ready(function () {
        $('table.display').DataTable();
    });
</script>
