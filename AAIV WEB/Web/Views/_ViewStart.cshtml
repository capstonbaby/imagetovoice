@{
    var area = HttpContext.Current.Request.RequestContext.RouteData.DataTokens["area"].ToString();
    string cLayout = "";

    switch (area)
    {
        case "Helper":
            cLayout = "~/Views/Shared/_Helper_Layout.cshtml";
            break;
        case "Admin":
            cLayout = "~/Views/Shared/_Admin_Layout.cshtml";
            break;
    }

    Layout = cLayout;
}
